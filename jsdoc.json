{
  "source": {
    "include": ["./src"],
    "includePattern": ".+\\.ts$"
  },
  "plugins": [
    "plugins/markdown",
    "better-docs/typescript"
  ],
  "opts": {
    "destination": "./docs/v1",
    "recurse": true,
    "template": "./node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "SSO OpenAPI",
      "title": "SSO OpenAPI - API v1.0.0",
      "navLinks": [
        {
          "label": "Home",
          "href": "./docs-template/index.html"
        }
      ]
    }
  }
}
