{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TS Node",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.ts",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/**/*.ts"],
      "console": "integratedTerminal"
    }
  ]
}
